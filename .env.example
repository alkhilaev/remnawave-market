# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ
# ===========================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# ===========================================
# БАЗА ДАННЫХ
# ===========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/remnawave_market?schema=public

# ===========================================
# JWT ТОКЕНЫ
# ===========================================
# Секретный ключ для подписи JWT токенов (обязательно измените в продакшне!)
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
# Время жизни access токена
JWT_ACCESS_TOKEN_EXPIRATION=15m
# Время жизни refresh токена
JWT_REFRESH_TOKEN_EXPIRATION=7d

# ===========================================
# ИНТЕГРАЦИЯ С REMNAWAVE
# ===========================================
# URL вашей панели Remnawave
REMNAWAVE_PANEL_URL=http://localhost:8080
# API токен для доступа к Remnawave
REMNAWAVE_API_TOKEN=your-remnawave-api-token
# Опционально: для доступа через bridge сети Docker
CADDY_AUTH_API_TOKEN=

# ===========================================
# ПЛАТЁЖНАЯ СИСТЕМА YOOKASSA
# ===========================================
# ID магазина в ЮKassa
YOOKASSA_SHOP_ID=your-yookassa-shop-id
# Секретный ключ ЮKassa
YOOKASSA_SECRET_KEY=your-yookassa-secret-key
# Включить/выключить функцию автоплатежей (true/false)
YOOKASSA_AUTO_RENEWAL_ENABLED=false

# ===========================================
# EMAIL СЕРВИС (для подтверждения регистрации)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@example.com

# ===========================================
# URL ФРОНТЕНДА (для редиректов после оплаты)
# ===========================================
FRONTEND_URL=http://localhost:3001
PAYMENT_SUCCESS_URL=http://localhost:3001/payment/success
PAYMENT_CANCEL_URL=http://localhost:3001/payment/cancel

# ===========================================
# CORS (разрешённые домены)
# ===========================================
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# ===========================================
# ОГРАНИЧЕНИЕ ЗАПРОСОВ (Rate Limiting)
# ===========================================
# Время в секундах
RATE_LIMIT_TTL=60
# Максимум запросов за TTL
RATE_LIMIT_MAX=100

# ===========================================
# ЛОГИРОВАНИЕ
# ===========================================
# Уровень: debug, info, warn, error
LOG_LEVEL=debug
